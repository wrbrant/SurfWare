#!/bin/bash

dir=$(pwd)
ope=$1
if [ "$ope"="" ] ; then
	ope='cp';
fi

echo ; echo "------------------------------Source-----------------------------------" ;
cd /mnt/hgfs/shareVM ; ls ;
echo "-----------------------------------------------------------------------" ; echo ;
read -e fil 


$ope $fil $dir 

echo ; echo "----------------------------Destination--------------------------------" ;
cd $dir ; ls ;
echo "-----------------------------------------------------------------------"

